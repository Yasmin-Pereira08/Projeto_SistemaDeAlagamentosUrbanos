<Page x:Class="TCC.ProfileEditarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Editar Perfil">

    <Page.Resources>
        <!-- Estilo do botão principal (azul) -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#091F5A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="ShadowBorder" Background="#071845" CornerRadius="8" Margin="0,4,0,0"/>
                            <Border x:Name="MainBorder" Background="{TemplateBinding Background}" CornerRadius="8" Margin="0,0,0,4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1a3275"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Margin" Value="0,4,0,0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo do botão secundário (cancelar) -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF5252"/>
            <Setter Property="BorderBrush" Value="#FF5252"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFEEEE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para os campos de entrada -->
        <Style x:Key="InputFieldStyle" TargetType="Border">
            <Setter Property="Background" Value="#F0F5FC"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderBrush" Value="#091F5A20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.15" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para ícones circulares -->
        <Style x:Key="IconCircleStyle" TargetType="Border">
            <Setter Property="Background" Value="#091F5A20"/>
            <Setter Property="CornerRadius" Value="50"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
        </Style>

        <!-- Estilo para TextBox -->
        <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0,5,0,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para PasswordBox -->
        <Style x:Key="CustomPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0,5,0,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para o botão de mostrar/esconder senha -->
        <Style x:Key="EyeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#44FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para mensagens de erro -->
        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF5252"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- NOVO: Estilo para mensagens informativas -->
        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#4FC3F7"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <!-- Fundo com gradiente -->
            <Grid.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FF1345A9"/>
                    <GradientStop Color="#FF051D4D" Offset="1"/>
                </RadialGradientBrush>
            </Grid.Background>

            <StackPanel MaxWidth="500" Margin="20" VerticalAlignment="Center">
                <!-- Cabeçalho -->
                <TextBlock Text="Editar Perfil" FontSize="32" FontWeight="Bold" Foreground="#FFB87A00"
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Linha decorativa -->
                <Border Height="4" Width="80" Background="#FFB87A00" CornerRadius="2"
                        HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <!-- Avatar -->
                <Border Width="100" Height="100" CornerRadius="50" Background="#FFB87A00"
                        HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBlock x:Name="txtInitials" Text="JS" FontSize="36" FontWeight="Bold"
                               Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Card principal -->
                <Border Background="#FF051D4D" CornerRadius="12" Padding="0" Margin="0,0,0,20"
                        BorderBrush="#091F5A20" BorderThickness="1">
                    <Grid>
                        <!-- Cabeçalho do card -->
                        <Border Height="70" VerticalAlignment="Top" CornerRadius="12,12,0,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FF8E5E00" Offset="0"/>
                                    <GradientStop Color="#B87A00" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="✏️" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                <TextBlock Text="Editar Informações" Foreground="White"
                                           FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Conteúdo do card -->
                        <StackPanel Margin="20,80,20,20">
                            <!-- Campo Nome -->
                            <Border Style="{StaticResource InputFieldStyle}" BorderBrush="#FF1345A9" Background="{x:Null}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Style="{StaticResource IconCircleStyle}" Background="#FFB87A00">
                                        <TextBlock Text="👤" FontSize="18"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                                    </Border>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Nome" Foreground="#FFD98F00" FontSize="16"/>
                                        <TextBox x:Name="txtNome" Text="João Silva"
                                                 Style="{StaticResource CustomTextBoxStyle}" Foreground="White" SelectionOpacity="1" CaretBrush="White"/>
                                        <TextBlock x:Name="txtErroNome" Style="{StaticResource ErrorTextStyle}"
                                                    Visibility="Collapsed"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Campo Telefone -->
                            <Border Style="{StaticResource InputFieldStyle}" BorderBrush="#FF1345A9" Background="{x:Null}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Style="{StaticResource IconCircleStyle}" Background="#FFB87A00">
                                        <TextBlock Text="📱" FontSize="18"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                                    </Border>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Telefone" Foreground="#FFD98F00" FontSize="16"/>
                                        <TextBox x:Name="txtTelefone" Text="(11) 98765-4321"
                                                 Style="{StaticResource CustomTextBoxStyle}" Foreground="White" CaretBrush="White"/>
                                        <TextBlock x:Name="txtErroTelefone" Style="{StaticResource ErrorTextStyle}"
                                                    Visibility="Collapsed"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Campo Email -->
                            <Border Style="{StaticResource InputFieldStyle}" Background="{x:Null}" BorderBrush="#FF1345A9">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Style="{StaticResource IconCircleStyle}" Background="#FFB87A00">
                                        <TextBlock Text="📧" FontSize="18"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                                    </Border>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Email" Foreground="#FFD98F00" FontSize="16"/>
                                        <TextBox x:Name="txtEmailEdit" Text="joao.silva@exemplo.com"
                                                 Style="{StaticResource CustomTextBoxStyle}" Foreground="White" CaretBrush="White"/>
                                        <TextBlock x:Name="txtErroEmail" Style="{StaticResource ErrorTextStyle}"
                                                    Visibility="Collapsed"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Campo Senha -->
                            <Border Style="{StaticResource InputFieldStyle}" Background="{x:Null}" BorderBrush="#FF1345A9">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Style="{StaticResource IconCircleStyle}" Background="#FFB87A00">
                                        <TextBlock Text="🔒" FontSize="18"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                                    </Border>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Senha" Foreground="#FFD98F00" FontSize="16"/>
                                        <Grid>
                                            <PasswordBox x:Name="txtSenha"
                                                         Style="{StaticResource CustomPasswordBoxStyle}"
                                                         Visibility="Visible" Foreground="White" CaretBrush="White"/>
                                            <TextBox x:Name="txtSenhaVisivel"
                                                     Style="{StaticResource CustomTextBoxStyle}"
                                                     Visibility="Collapsed" Foreground="White"/>
                                        </Grid>
                                        <TextBlock x:Name="txtErroSenha" Style="{StaticResource ErrorTextStyle}"
                                                    Visibility="Collapsed"/>
                                        <!-- NOVO: Mensagem informativa para senha criptografada -->
                                        <TextBlock x:Name="txtInfoSenha" 
                                                   Text="" 
                                                   Style="{StaticResource InfoTextStyle}"
                                                   Visibility="Collapsed"/>
                                    </StackPanel>
                                    <Button x:Name="btnToggleSenha" Grid.Column="2" Style="{StaticResource EyeButtonStyle}"
                                            Click="btnToggleSenha_Click" Content="👁" ToolTip="Mostrar senha"
                                             Foreground="White" FontSize="20"/>
                                </Grid>
                            </Border>

                            <!-- Campo Confirmar Senha -->
                            <Border Style="{StaticResource InputFieldStyle}" Background="{x:Null}" BorderBrush="#FF1345A9">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Style="{StaticResource IconCircleStyle}" Background="#FFB87A00">
                                        <TextBlock Text="🔐" FontSize="18"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                                    </Border>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Confirmar Senha" Foreground="#FFD98F00" FontSize="16"/>
                                        <Grid>
                                            <PasswordBox x:Name="txtConfirmarSenha"
                                                         Style="{StaticResource CustomPasswordBoxStyle}"
                                                         Visibility="Visible" Foreground="White" CaretBrush="White"/>
                                            <TextBox x:Name="txtConfirmarSenhaVisivel"
                                                     Style="{StaticResource CustomTextBoxStyle}"
                                                     Visibility="Collapsed" Foreground="White"/>
                                        </Grid>
                                        <TextBlock x:Name="txtErroConfirmarSenha" Style="{StaticResource ErrorTextStyle}"
                                                    Visibility="Collapsed"/>
                                    </StackPanel>
                                    <Button x:Name="btnToggleConfirmarSenha" Grid.Column="2" Style="{StaticResource EyeButtonStyle}"
                                            Click="btnToggleConfirmarSenha_Click" Content="👁" ToolTip="Mostrar senha"
                                             Foreground="White" FontSize="20"/>
                                </Grid>
                            </Border>

                            <!-- Botões -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                                <Button Content="💾 Salvar" Width="200"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Click="btnSalvar_Click"/>
                                <Button Content="❌ Cancelar" Width="200"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="Button_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Rodapé -->
                <TextBlock Text="Última atualização: 19 de Maio, 2025" Foreground="#091F5A70"
                           FontSize="12" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
