<Page x:Class="TCC.RotasNavigationWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      mc:Ignorable="d"
      Background="#0A3285"
      Title="Rotas Alternativas">

    <Page.Resources>
        <!-- Estilos e recursos -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0A3285" Offset="0"/>
            <GradientStop Color="#051d4d" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#11224D" Offset="0"/>
            <GradientStop Color="#0F1D40" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="BorderBrush" Value="#223D78"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.3" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RouteTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="AlertBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#051d4d" Offset="0"/>
                <GradientStop Color="#030F28" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho principal com gradiente -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" Padding="24,18">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Path Data="M12,11.5A2.5,2.5 0 0,1 9.5,9A2.5,2.5 0 0,1 12,6.5A2.5,2.5 0 0,1 14.5,9A2.5,2.5 0 0,1 12,11.5M12,2A7,7 0 0,0 5,9C5,14.25 12,22 12,22C12,22 19,14.25 19,9A7,7 0 0,0 12,2Z" 
                          Fill="#FFD98F00" Width="28" Height="28" Stretch="Uniform" Margin="0,0,12,0"/>
                    <TextBlock Text="Rotas Alternativas"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#FFD98F00"
                           VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="Navegação Segura" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Center" 
                           Foreground="#99FFFFFF" 
                           FontSize="14"/>
            </Grid>
        </Border>

        <!-- Barra de navegação com origem e destino -->
        <Border Grid.Row="1" Background="#051d4d" Padding="24,18" Effect="{DynamicResource DropShadowEffect}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Origem com ícone melhorado -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0">
                    <Border Width="32" Height="32" Background="#1AFFDC43" CornerRadius="16" Margin="0,0,12,0">
                        <Ellipse Width="16" Height="16" Fill="#FFDC43" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="De" 
                                   FontSize="12" 
                                   Foreground="#99FFFFFF"/>
                        <TextBlock x:Name="OrigemTextBlock" 
                                   Text="Sua localização atual" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                    </StackPanel>
                </StackPanel>

                <!-- Seta de direção estilizada -->
                <Border Grid.Column="2" 
                        Background="#0AFFFFFF" 
                        CornerRadius="20" 
                        Width="40" 
                        Height="40" 
                        HorizontalAlignment="Center">
                    <TextBlock Text="→" 
                               FontSize="24" 
                               Foreground="#CCFFFFFF" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Destino com ícone -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                    <Border Width="32" Height="32" Background="#1AFF5722" CornerRadius="16" Margin="0,0,12,0">
                        <Path Data="M12,11.5A2.5,2.5 0 0,1 9.5,9A2.5,2.5 0 0,1 12,6.5A2.5,2.5 0 0,1 14.5,9A2.5,2.5 0 0,1 12,11.5M12,2A7,7 0 0,0 5,9C5,14.25 12,22 12,22C12,22 19,14.25 19,9A7,7 0 0,0 12,2Z" 
                              Fill="#FF5722" Width="16" Height="16" Stretch="Uniform"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="Para" 
                                   FontSize="12" 
                                   Foreground="#99FFFFFF"/>
                        <TextBlock x:Name="DestinoTextBlock" 
                                   Text="Av. Paulista, 1000" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Conteúdo principal (ScrollViewer) -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Rota Direta -->
                <Border Grid.Row="0" Grid.Column="0"
                        Style="{StaticResource CardBorder}">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="Rota Direta"
                                       Style="{StaticResource RouteTitle}"
                                       Foreground="#4FC3F7"/>
                            <Border Background="#1A4FC3F7" 
                                    CornerRadius="12" 
                                    HorizontalAlignment="Right" 
                                    Padding="8,4">
                                <TextBlock Text="🟦 Caminho Principal" 
                                           Foreground="#4FC3F7" 
                                           FontSize="12"/>
                            </Border>
                        </Grid>
                        <Border CornerRadius="8" BorderBrush="#223D78" BorderThickness="1">
                            <wv2:WebView2 x:Name="webViewDireta" Height="280" />
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Informações e Alerta de Risco -->
                <Grid Grid.Row="0" Grid.Column="1">
                    <StackPanel>
                        <!-- Informação de Distância -->
                        <Border Style="{StaticResource CardBorder}" Margin="8,8,8,4">
                            <StackPanel>
                                <TextBlock Text="Informações da Rota Direta" 
                                           FontWeight="SemiBold" 
                                           FontSize="16" 
                                           Foreground="#E0E0E0" 
                                           Margin="0,0,0,12"/>

                                <Grid Margin="0,4">
                                    <TextBlock Text="Distância:" 
                                               Foreground="#99FFFFFF" 
                                               HorizontalAlignment="Left"/>
                                    <TextBlock x:Name="DistanciaTextBlock" 
                                               Text="5,2 km" 
                                               Foreground="White" 
                                               HorizontalAlignment="Right" 
                                               FontWeight="Medium"/>
                                </Grid>

                                <Grid Margin="0,4">
                                    <TextBlock Text="Tempo estimado:" 
                                               Foreground="#99FFFFFF" 
                                               HorizontalAlignment="Left"/>
                                    <TextBlock x:Name="TempoTextBlock"
                                               
                                               Foreground="White" 
                                               HorizontalAlignment="Right" 
                                               FontWeight="Medium"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Alerta de Risco - Mantendo a cor original -->
                        <Border x:Name="AlertaPanel"
                                Style="{StaticResource AlertBorder}"
                                
                                BorderBrush="#223D78"
                                Margin="8,4,8,8">
                            <StackPanel>
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="⚠️" FontSize="20" Margin="0,0,8,0"/>
                                        <TextBlock x:Name="AlertaTextBlock"
                                                   Foreground="White"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   Text="Risco Detectado"/>
                                    </StackPanel>
                                    <Border Background="#33FFFFFF" 
                                            CornerRadius="10" 
                                            Width="20" 
                                            Height="20" 
                                            HorizontalAlignment="Right">
                                        <TextBlock Text="i" 
                                                   Foreground="White" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" 
                                                   FontWeight="Bold"/>
                                    </Border>
                                </Grid>
                                <TextBlock Text="Atenção: rota direta pode conter riscos. Recomendamos utilizar a rota alternativa para sua segurança."
                                           Foreground="#FFFFFFFF"
                                           FontSize="14"
                                           TextWrapping="Wrap"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Rota com desvio -->
                <Border x:Name="PainelDesvio"
                        Grid.Row="1" Grid.Column="0"
                        Style="{StaticResource CardBorder}">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="Rota Alternativa"
                                       Style="{StaticResource RouteTitle}"
                                       Foreground="#FFB74D"/>
                            <Border Background="#1AFFB74D" 
                                    CornerRadius="12" 
                                    HorizontalAlignment="Right" 
                                    Padding="8,4">
                                <TextBlock Text="🟧 Caminho Seguro" 
                                           Foreground="#FFB74D" 
                                           FontSize="12"/>
                            </Border>
                        </Grid>
                        <Border CornerRadius="8" BorderBrush="#223D78" BorderThickness="1">
                            <wv2:WebView2 x:Name="webViewDesvio" Height="280" />
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Informações e Alerta de Rota Segura -->
                <Grid Grid.Row="1" Grid.Column="1">
                    <StackPanel>
                        <!-- Informação de Distância do Desvio -->
                        <Border x:Name="bordarota" Style="{StaticResource CardBorder}" Margin="8,8,8,4">
                            <StackPanel>
                                <TextBlock Text="Informações da Rota Alternativa" 
                                           FontWeight="SemiBold" 
                                           FontSize="16" 
                                           Foreground="#E0E0E0" 
                                           Margin="0,0,0,12"/>

                                <Grid Margin="0,4">
                                    <TextBlock Text="Distância:" 
                                               Foreground="#99FFFFFF" 
                                               HorizontalAlignment="Left"/>
                                    <TextBlock x:Name="DistanciaDesvioTextBlock" 
                                               Text="6,8 km" 
                                               Foreground="White" 
                                               HorizontalAlignment="Right" 
                                               FontWeight="Medium"/>
                                </Grid>

                                <Grid Margin="0,4">
                                    <TextBlock Text="Tempo adicional:" 
                                               Foreground="#99FFFFFF" 
                                               HorizontalAlignment="Left"/>
                                    <TextBlock x:Name="TempoDesvioTextBlock"
                                              
                                               Foreground="White" 
                                               HorizontalAlignment="Right" 
                                               FontWeight="Medium"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Alerta de Rota Segura - Mantendo a cor original -->
                        <Border x:Name="AlertaRotaSeguraPanel"
                                Style="{StaticResource AlertBorder}"
                                Background="#FF20D034"
                                BorderBrush="#223D78"
                                Margin="8,4,8,8">
                            <StackPanel>
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="✅" FontSize="20" Margin="0,0,8,0"/>
                                        <TextBlock x:Name="AlertaRotaSeguraTextBlock"
                                                   Foreground="White"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   Text="Rota Alternativa Segura"/>
                                    </StackPanel>
                                </Grid>
                                <TextBlock Text="Esta rota evita áreas de risco identificadas. Recomendamos utilizar este caminho para uma viagem mais segura."
                                           Foreground="#FFFFFFFF"
                                           FontSize="14"
                                           TextWrapping="Wrap"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>