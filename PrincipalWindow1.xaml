<Window x:Class="TCC.PrincipalWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Meu App" Height="450" Width="800"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Estilo para os botões do menu -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#99FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ContentPresenter x:Name="icon" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="text" Grid.Row="1" Text="{TemplateBinding Content}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                                       Foreground="{TemplateBinding Foreground}" Margin="0,4,0,0"
                                       FontSize="12"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para o botão ativo - Agora com a cor #FFD98F00 -->
        <Style x:Key="ActiveMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Foreground" Value="#FFD98F00"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Área Principal -->
        <Frame x:Name="MainFrame" Grid.Row="0" Background="#091F5A" />

        <!-- Menu Inferior -->
        <Border Height="70" VerticalAlignment="Bottom" Background="#FF060744" 
                BorderThickness="0,1,0,0" BorderBrush="#3FFFFFFF">
            <Border.Effect>
                <DropShadowEffect Direction="90" ShadowDepth="0" BlurRadius="10" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    
                </Grid.ColumnDefinitions>


                <!-- Botão Início -->
                <Button x:Name="HomeButton" Grid.Column="0" Click="Home_Click" 
                        Style="{StaticResource ActiveMenuButtonStyle}">
                    <Button.Content>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Path Grid.Row="0" Width="24" Height="24" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                  Stretch="Uniform" Data="M3 12L5 10M5 10L12 3L19 10M5 10V20C5 20.5523 5.44772 21 6 21H9M19 10L21 12M19 10V20C19 20.5523 18.5523 21 18 21H15M9 21C9.55228 21 10 20.5523 10 20V16C10 15.4477 10.4477 15 11 15H13C13.5523 15 14 15.4477 14 16V20C14 20.5523 14.4477 21 15 21M9 21H15"/>
                            <TextBlock Grid.Row="1" Text="Início" HorizontalAlignment="Center" Margin="0,4,0,0" 
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </Grid>
                    </Button.Content>
                </Button>

                <!-- Botão Notificações -->
                <Button x:Name="NotificationsButton" Grid.Column="1" Click="Notifications_Click" 
                        Style="{StaticResource MenuButtonStyle}">
                    <Button.Content>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Path Grid.Row="0" Width="24" Height="24" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                  Stretch="Uniform" Data="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0"/>
                            <TextBlock Grid.Row="1" Text="Notificações" HorizontalAlignment="Center" Margin="0,4,0,0" 
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </Grid>
                    </Button.Content>
                </Button>

                <!-- Botão Perfil -->
                <Button x:Name="ProfileButton" Grid.Column="2" Click="Profile_Click" 
                        Style="{StaticResource MenuButtonStyle}">
                    <Button.Content>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Path Grid.Row="0" Width="24" Height="24" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                  Stretch="Uniform" Data="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"/>
                            <TextBlock Grid.Row="1" Text="Perfil" HorizontalAlignment="Center" Margin="0,4,0,0" 
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </Grid>
                    </Button.Content>
                </Button>

                <!-- Botão Informações -->
                <Button x:Name="InfoButton" Grid.Column="3" Click="Info_Click" 
        Style="{StaticResource MenuButtonStyle}">
                    <Button.Content>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Path Grid.Row="0" Width="24" Height="24" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                  Stretch="Uniform" Data="M11 7h2v2h-2V7zm0 4h2v6h-2v-6zm1-9C6.48 2 2 6.48 2 12s4.48 10 10 10
      10-4.48 10-10S17.52 2 12 2z"/>
                            <TextBlock Grid.Row="1" Text="Informações" HorizontalAlignment="Center" Margin="0,4,0,0" 
                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </Grid>
                    </Button.Content>
                </Button>

                <Button x:Name="SairButton" Grid.Column="4" Click="Sair_Click" 
  Style="{StaticResource MenuButtonStyle}">
                    <Button.Content>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Path Width="24" Height="24" 
      Fill="Red" 
      Stretch="Uniform" 
      Data="M10.09 15.59L11.5 17l5-5-5-5-1.41 1.41L12.67 11H3v2h9.67l-2.58 2.59zM19 3H5c-1.11 0-2 .9-2 2v4h2V5h14v14H5v-4H3v4c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z"/>
                            <TextBlock Grid.Row="1" Text="Sair" HorizontalAlignment="Center" Margin="0,4,0,0" 
                 Foreground="Red"/>
                        </Grid>
                    </Button.Content>
                </Button>

                <!-- Indicador de aba ativa - Agora com a cor #FFD98F00 -->
                <Rectangle x:Name="ActiveIndicator" Height="3" Width="40" Fill="#FFD98F00" 
                       VerticalAlignment="Top" HorizontalAlignment="Center" 
                       Grid.Column="0" RadiusX="1.5" RadiusY="1.5"/> 

            </Grid>
        </Border>
    </Grid>
</Window>